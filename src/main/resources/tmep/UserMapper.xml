    <select id="findWelcomeList" resultMap="welcomeListModel">
        SELECT m.content content,m.create_time createTime,m.creator creator,t.tag_name tagName
        FROM messagelib m
        LEFT JOIN taglib t ON m.tag_id=t.tag_id
